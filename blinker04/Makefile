
ARMGNU = arm-none-eabi
#ARMGNU = arm-linux-gnueabi

AOPS = --warn --fatal-warnings -mcpu=cortex-m3
COPS = -Wall -Werror -O2 -nostdlib -nostartfiles -ffreestanding 
 -mcpu=cortex-m0

all : blinker04.bin

clean:
	rm -f *.bin
	rm -f *.o
	rm -f *.elf
	rm -f *.list
	rm -f *.bc
	rm -f *.opt.s
	rm -f *.norm.s
	rm -f *.hex

#---------------------------------

flash.o : flash.s
	$(ARMGNU)-as $(AOPS) flash.s -o flash.o

blinker04.o : blinker04.c
	$(ARMGNU)-gcc $(COPS) -mthumb -mcpu=cortex-m0 -march=armv6-m -c blinker04.c -o blinker04.o

blinker04.bin : flash.ld flash.o blinker04.o
	$(ARMGNU)-ld -o blinker04.elf -T flash.ld flash.o blinker04.o
	$(ARMGNU)-objdump -D blinker04.elf > blinker04.list
	$(ARMGNU)-objcopy blinker04.elf blinker04.bin -O binary

